apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ${application.name}
  namespace: ${application.namespace}
  labels:
    app: ${application.name}
spec:
  replicas: ${application.replicas}
  template:
    metadata:
      name: ${application.name}
      namespace: ${application.namespace}
      labels:
        app: ${application.name}
        version: ${application.version}
    spec:
      containers:
      - name: application
        image: ${component.docker.image}
        env:
        - name: ENVIRONMENT_NAME
          value: ${application.environment.name}
        ports:
        - name: http
          containerPort: ${application.port}
        readinessProbe:
          httpGet:
            path: /status
            port: http
          initialDelaySeconds: 5
        livenessProbe:
          httpGet:
            path: /status
            port: http
          initialDelaySeconds: 5
          timeoutSeconds: 1
---
apiVersion: v1
kind: Service
metadata:
  name: ${application.name}
  namespace: ${application.namespace}
  labels:
    app: ${application.name}
spec:
  ports:
  - port: 80
    targetPort: http
  selector:
    app: ${application.name}
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: ${application.name}
  namespace: ${application.namespace}
  labels:
    app: ${application.name}
spec:
  rules:
  - host: ${application.ingress.host}
    http:
      paths:
      - path: ${application.path}
        backend:
          serviceName: ${application.name}
          servicePort: 80
